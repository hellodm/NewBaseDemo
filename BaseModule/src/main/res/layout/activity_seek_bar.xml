<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hello.app.Activity.SeekBarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:text="@string/hello_world" />


    <com.hello.app.MyView.CheckScoreView
        android:id="@+id/checkView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/yellow"
        android:visibility="gone"></com.hello.app.MyView.CheckScoreView>


    <Button
        android:id="@+id/button_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/anim_loading_fly" />

    <com.hello.app.MyView.loading.LoadingRecycleView
        android:id="@+id/LoadingRecycleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.hello.app.MyView.loading.KLoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f5f5f5" />

    <com.hello.app.MyView.loading.KSmileView
        android:layout_marginTop="10dp"
        android:id="@+id/smileView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f5f5f5" />


    <com.hello.app.MyView.seekbar.CaoSeekBar
        android:id="@+id/mySeekBar"
        style="@style/mySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:animateLayoutChanges="true"

        android:progress="10"
        android:progressDrawable="@drawable/seek_bar_drawable"
        android:thumb="@drawable/icon_car" />

</LinearLayout>
